                            FontSize="12"
                            Foreground="{DynamicResource Element.Foreground.Gray112}" />

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Width="18"
                            Height="18"
                            VerticalAlignment="Center"
