                                    Grid.Column="1"
                                    MinWidth="80"
                                    Margin="10,5"
                                    Maximum="100"
                                    Minimum="0.1"
                                    Value="{Binding Source={x:Static t:UserSettings.All}, Path=SmoothLoopSimilarity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource Element.Foreground.Medium}"
